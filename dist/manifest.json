{
  "name": "Pixiv Filter",
  "version": "1.1.0",
  "manifest_version": 2,
  "default_locale": "en",
  "description": "__MSG_ext_description__",
  "icons": {
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.pixiv.net/*"],
      "js": ["content_script.js"],
      "css": ["style.css"]
    }
  ],
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://www.pixiv.net/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "options_page": "./options/options.html"
}
