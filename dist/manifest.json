{
  "name": "Pixiv Filter",
  "version": "1.0.2",
  "manifest_version": 2,
  "description": "PixivでNG登録したタグやユーザー名のイラストを非表示にします。",
  "icons": {
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.pixiv.net/*"],
      "js": ["content_script.js"],
      "css": ["style.css"]
    }
  ],
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://www.pixiv.net/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "options_page": "./options/options.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
